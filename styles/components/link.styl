.link
  text-decoration none
  transition .4s
  &_white
    color #fff
  &_grey
    color grey
  &_dotted
    border-bottom 1px dotted #fff
    &:hover
      border-bottom 1px dotted rgba(white, 0)
  &_transparent
    color rgba(255, 255, 255, 0.5)
    border-bottom 1px dotted rgba(255, 255, 255, 0.5)
    &:hover
      color white
