.banner
  text-transform uppercase
  text-align center
  padding 15% 38% 40px
  color #fff
  background-color rgba(0,0,0,.4)

.banner__head
  display inline-block
  font-size 2.5rem
  border-top 2px solid #fff
  border-bottom 2px solid #fff
  padding 1rem 0

.banner__button
  text-transform uppercase
  margin-top 2rem
  font-size 1.1rem
  color #fff
  padding 1rem 2rem
  background #ed4933
  border none
  border-radius 10px
  &:hover
    background lighten(@background, 20%)

.banner__learnMore
  display block
  margin-top 13rem
  text-decoration none
  color #fff
